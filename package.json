{
  "name": "mpv-player",
  "version": "1.0.0",
  "description": "MPV Player built with Electron, Vue and TypeScript",
  "main": "./out/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "serve:hls": "node serve-video.js --dir videos --port 8081",
    "serve": "node serve-video.js",
    "serve:8080": "node serve-video.js --port 8080",
    "build:native": "node-gyp rebuild --directory native",
    "rebuild:native": "node-gyp rebuild --directory native",
    "clean:native": "node-gyp clean --directory native"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^28.0.0",
    "electron-vite": "^2.0.0",
    "node-addon-api": "^7.1.1",
    "node-gyp": "^10.3.1",
    "typescript": "5.3.3",
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27"
  }
}
